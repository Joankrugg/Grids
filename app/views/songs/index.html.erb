<div class="container">
  <div class="user-page">
    <h3 class="title">Songs</h3>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @songs.each do |s| %>
      <div class="col-lg-3 col-sm-4">
        <%= link_to s do %>
          <% if s.youtube_link.present? %>
            <div class="card">
              <div class="video-responsive">
                <iframe width="560" height="315" src='https://www.youtube.com/embed/<%= s.youtube_link[32..120] %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              </div>
              <div class="infos"><%= s.title.capitalize %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
