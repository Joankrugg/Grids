<div class="login-sub-nav"></div>
<div class="container content login">
  <div class="col-xs-12">
    <h2 class="infos">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="infos"><%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %></div>
        <div class="infos"><%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %></div>
        <div class="infos"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
        <div class="infos">
          <%= f.button :submit, "Log in", class: "btn btn-flat log"  %>
        </div>
      </div>
    <% end %>
    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<div class="sub-footer"></div>
