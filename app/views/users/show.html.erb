<% unless @user.photo.present? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/da2krghvd/image/upload/v1598080454/Montreal-Jazz-Band_dzf8jf.jpg);">
    <div class="container">
      <% if @user == current_user %>
        <h1 style="text-align: center">Hi buddy !!! would you like to update your profil first?</h1>
        <div class="call-to-action">
          <%= render 'form' %>
          <%= link_to new_song_path do %>
            <div class="btn btn-flat">
              New song
            </div>
          <% end %>
        </div>
      <% else %>
        <h1 style="text-align: center">I'm about to edit my profil but I need some time leave me a message</h1>
      <% end %>
    </div>
  </div>
  <% else %>
  <div class="banner" style="padding-top: 60px; background-image: url(<%= rails_blob_url(@user.photo) %>)">
    <div class="container">
      <% if @user.name? %>
        <h1 style="text-align: center"><%= @user.name %></h1>
      <% end %>
      <p class="infos"><%= @user.email %></p>
      <div class="call-to-action">
        <%= render 'form' %>
        <%= link_to new_song_path do %>
          <div class="btn btn-flat">
            New song
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<div class="container songbook">
  <h3 class="title">SONGBOOK</h3>
    <% if @user.songs.present? %>
      <% @user.songs.each do |s| %>
        <%= link_to s do %>
          <p class="infos on-white"><%= s.title %></p><br>
        <% end %>
      <% end %>
    <% else %>
      <p class="infos on-white">no song yet</p>
    <% end %>
  </div>
</div>


