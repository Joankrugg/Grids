<div class="container">
  <div class="user-page">
    <h3 class="title">Les Zicos</h3>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @users.each do |u| %>
      <div class="col-lg-3 col-sm-4">
        <%= link_to u do %>
          <% unless u.photo.present? %>
            <div class="card">
              <div class="user-card"><%= cl_image_tag ('v1598080266/preservation_hall_jazz_band_isixvg.jpg'), class: "img-fluid" %></div>
              <p class='infos'><%= link_to 'send a message', new_personal_message_path(receiver_id: u) %></p>
              <p class='infos'><%= u.email %></p>
            </div>
          <% else %>
            <div class="card">
              <div class="user-card"><%= image_tag u.photo, class: "img-fluid" %></div>
              <p class='infos'><%= link_to 'send a message', new_personal_message_path(receiver_id: u) %></p>
              <p class='infos'><%= u.email %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
