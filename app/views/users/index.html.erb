<div class="container">
  <div class="user-page">
    <h1 class="title">Les Zicos</h1>
    <div class="cards">
      <% @users.each do |u| %>
        <% if u.photo.present? %>
          <%= link_to u do %>
            <div class="card">
              <div class="user-card"><%= u.photo %></div>
              <div class="container">
                <h4><%= u.email %></h4>
                <p>Architect & Engineer</p>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= link_to u do %>
            <div class="card">
              <img src="img_avatar.png" alt="Avatar" style="width:100%">
              <div class="container">
                <h4><%= u.email %></h4>
                <p>Architect & Engineer</p>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
