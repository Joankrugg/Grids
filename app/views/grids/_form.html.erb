<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="form-grid">
        <h1>Make a grid</h1>
      </div>
    </div>
  </div>
  <%= simple_form_for [@song, @grid ] do |f| %>
    <div class="row">
      <div class="col-sm-6 form-group">
        <label class="control-label check_boxes optional">Section</label>
        <input type="hidden" name="grid[section_id]" value="">
        <div class="section-names">
          <% Section.all.each do |section| %>
            <div class="section-box" class="hidden" value="<%= section.id %>" name="grid[section_id]" id="grid_section_id_section.id ">
            <label for="grid_section_id_<%= section.id %>"><%= section.name %><i class="fa fa-check"></i></label>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-sm-6 form-group">
        <fieldset class="form-group optional grid_location">
          <legend class="col-form-label pt-0">Location</legend>
          <input type="hidden" name="grid[location]" value="">
          <div class="location-box">
            <input class="location-box-input optional" type="hidden" value="1" name="grid[location]" id="grid_location_1">
            <label class="location-box-label collection" for="grid_location_1">1</label>
          </div>
          <div class="location-box">
            <input class="location-box-input optional" type="hidden" value="2" name="grid[location]" id="grid_location_2">
            <label class="location-box-label collection" for="grid_location_2">2</label>
          </div>
          <div class="location-box">
            <input class="location-box-input optional" type="hidden" value="3" name="grid[location]" id="grid_location_3">
            <label class="location-box-label collection" for="grid_location_3">3</label>
          </div>
          <div class="location-box">
            <input class="location-box-input optional" type="hidden" value="4" name="grid[location]" id="grid_location_4">
            <label class="location-box-label collection" for="grid_location_4">4</label>
          </div>
          <div class="location-box">
            <input class="location-box-input optional" type="hidden" value="5" name="grid[location]" id="grid_location_5">
            <label class="location-box-label collection" for="grid_location_5">5</label>
          </div>
          <div class="location-box">
            <input class="location-box-input optional" type="hidden" value="6" name="grid[location]" id="grid_location_6">
            <label class="location-box-label collection" for="grid_location_6">6</label>
          </div>
          <div class="location-box">
            <input class="location-box-input optional" type="hidden" value="7" name="grid[location]" id="grid_location_7">
            <label class="location-box-label collection" for="grid_location_7">7</label>
          </div>
          <div class="location-box">
            <input class="location-box-input optional" type="hidden" value="8" name="grid[location]" id="grid_location_8">
            <label class="location-box-label collection" for="grid_location_8">8</label>
          </div>
        </fieldset>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-6">
        <fieldset class="form-group radio_buttons required grid_type">
          <legend class="col-form-label pt-0"></legend>
          <input type="hidden" name="grid[type_id]" value="">
          <% Type.all.each do |type| %>
            <div class="type-box">
              <input class="form-check-input radio_buttons required" type="hidden" value="type_id" name="grid[type_id]" id="grid_type_id_1">
              <label class="form-check-label collection_radio_buttons" for="grid_type_id_1"><%= type.name %></label>
            </div>
          <% end %>
        </fieldset>
      </div>
      <div class="col-sm-6">
        <fieldset class="form-group radio_buttons optional grid_grid_location">
          <legend class="col-form-label pt-0">Grid location</legend>
          <input type="hidden" name="grid[grid_location]" value="">
          <div class="grid-location-box">
            <input class="grid-location-box-input optional" type="hidden" value="1" name="grid[grid_location]" id="grid_grid_location_1"><label class="grid-location-box-label collection_hidden_buttons" for="grid_grid_location_1">1</label>
          </div>
          <div class="grid-location-box">
            <input class="grid-location-box-input optional" type="hidden" value="2" name="grid[grid_location]" id="grid_grid_location_2"><label class="grid-location-box-label collection_hidden_buttons" for="grid_grid_location_2">2</label>
          </div>
          <div class="grid-location-box">
            <input class="grid-location-box-input optional" type="hidden" value="3" name="grid[grid_location]" id="grid_grid_location_3"><label class="grid-location-box-label collection_hidden_buttons" for="grid_grid_location_3">3</label>
          </div>
          <div class="grid-location-box">
            <input class="grid-location-box-input optional" type="hidden" value="4" name="grid[grid_location]" id="grid_grid_location_4"><label class="grid-location-box-label collection_hidden_buttons" for="grid_grid_location_4">4</label>
          </div>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <fieldset class="form-group radio_buttons required grid_type">
          <legend class="col-form-label pt-0"></legend>
          <input type="hidden" name="grid[type_id]" value="">
          <% MusicalNote.all.each do |musical_note| %>
