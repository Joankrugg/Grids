    </div>

    <div class="row">
      <div class="col-sm-6">
        <fieldset class="form-group radio_buttons required grid_type">
          <legend class="col-form-label pt-0"></legend>
          <input type="hidden" name="grid[type_id]" value="">
          <% ThirdMusicalNote.all.each do |third_musical_note| %>
            <div class="third_musical_note-box">
              <input class="form-check-input radio_buttons required" type="hidden" value="third_musical_note_id" name="grid[third_musical_note_id]" id="grid_third_musical_note_id_1">
              <label class="form-check-label collection_radio_buttons" for="grid_third_musical_note_id_1"><%= third_musical_note.name %></label>
            </div>
          <% end %>
        </fieldset>
      </div>
      <div class="col-sm-6">
        <fieldset class="form-group radio_buttons required grid_type">
          <legend class="col-form-label pt-0"></legend>
          <input type="hidden" name="grid[type_id]" value="">
          <% ThirdMusicalScale.all.each do |third_musical_scale| %>
            <div class="third_musical_scale-box">
              <input class="form-check-input radio_buttons required" type="hidden" value="third_musical_scale_id" name="grid[third_musical_scale_id]" id="grid_third_musical_scale_id_1">
              <label class="form-check-label collection_radio_buttons" for="grid_third_musical_scale_id_1"><%= third_musical_scale.name %></label>
            </div>
          <% end %>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <fieldset class="form-group radio_buttons required grid_type">
          <legend class="col-form-label pt-0"></legend>
          <input type="hidden" name="grid[type_id]" value="">
          <% FourthMusicalNote.all.each do |fourth_musical_note| %>
            <div class="fourth_musical_note-box">
              <input class="form-check-input radio_buttons required" type="hidden" value="fourth_musical_note_id" name="grid[fourth_musical_note_id]" id="grid_fourth_musical_note_id_1">
              <label class="form-check-label collection_radio_buttons" for="grid_fourth_musical_note_id_1"><%= fourth_musical_note.name %></label>
            </div>
          <% end %>
        </fieldset>
      </div>
      <div class="col-sm-6">
        <fieldset class="form-group radio_buttons required grid_type">
          <legend class="col-form-label pt-0"></legend>
          <input type="hidden" name="grid[type_id]" value="">
          <% FourthMusicalScale.all.each do |fourth_musical_scale| %>
            <div class="fourth_musical_scale-box">
              <input class="form-check-input radio_buttons required" type="hidden" value="fourth_musical_scale_id" name="grid[fourth_musical_scale_id]" id="grid_fourth_musical_scale_id_1">
              <label class="form-check-label collection_radio_buttons" for="grid_fourth_musical_scale_id_1"><%= fourth_musical_scale.name %></label>
            </div>
          <% end %>
        </fieldset>
      </div>
    </div>
      <%= f.submit "Save", class: "btn btn-primary"  %>
    <% end %>
      </div>
    </div>
  </div>
</div>


