<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= link_to root_path, class: 'brand' do %>
    <h1>GRID MAKER</h1>
  <% end %>

  <% if user_signed_in? && current_user.photo.present? %>
    <%= link_to current_user do %>
      <%= image_tag current_user.photo, class: 'rounded-circle' , height: 45, width: 45, crop: :fit %>
    <% end %>
  <% elsif user_signed_in? && current_user.photo == nil %>
    <%= link_to current_user do %>
      <%= image_tag "logo_grid.png", class: 'rounded-circle' , height: 45, width: 45, crop: :fit %>
    <% end %>
  <% else %>
    <%= link_to 'Connect', new_user_session_path, class: 'connect'  %>
  <% end %>
</div>





