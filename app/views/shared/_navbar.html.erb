<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand " do %>
    <%= image_tag "logo_grid.png", class: "avatar" %>
  <% end %>

  <%= link_to root_path, class: 'brand' do %>
    <h1>Grid Maker</h1>
  <% end %>
  <!-- Button trigger modal -->

  <button type="button" class="btn btn-primary move" data-toggle="modal" data-target="#move">
    Move
  </button>

  <!-- Modal -->
  <div class="modal fade" id="move" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <%= link_to "Profil", current_user, class: "modal-item btn btn-primary" %><br>
          <%= link_to "Users", users_path, class: "modal-item btn btn-primary" %><br>
          <%= link_to "Songs", songs_path, class: "modal-item btn btn-primary" %><br>
          <%= link_to "Messages", conversations_path, class: "modal-item btn btn-primary" %><br>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "modal-item btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>





